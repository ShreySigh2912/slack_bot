# Slack Admission Bot - .env example
# Copy this file to .env and fill in real values

# Slack App credentials
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Optional OAuth (for /slack/install and /slack/oauth_redirect)
SLACK_CLIENT_ID=1234567890.1234567890
SLACK_CLIENT_SECRET=your-slack-client-secret
# Render URL example: https://your-render-service.onrender.com/slack/oauth_redirect
SLACK_REDIRECT_URL=https://YOUR-RENDER-URL/slack/oauth_redirect

# Channel IDs
# The announcement channel where users join and trigger a DM (e.g., #program_announcement)
ANNOUNCE_CHANNEL_ID=C0123456789
# Destination batch channels (bot must already be a member)
BATCH2_CHANNEL_ID=C0BATCH20000
BATCH3_CHANNEL_ID=C0BATCH30000

# Web server port (Render provides PORT automatically)
PORT=3000
